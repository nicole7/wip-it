<div class="container">
  <h1><%= current_user.first_name %>'s Profile Page</h1>
  <% if current_user.recipes.empty? && current_user.posts.empty? %>
    <%= "You do not have any recipes yet."%>
  <% else %>
    <%= link_to 'Add', '/posts/new' %>
    <%=" a recipe or "%>
    <%= link_to 'search', '/recipes/new' %>
    <%=" for some!" %>
    <% current_user.recipes.each do |recipe| %>
      <%= recipe %>
  <% end %>
    <% current_user.posts.each do |post| %>
      <%= post %>
    <% end %>
  <% end %>

  <br></br>
  <h3>Suggested Friends</h3>
  <% for user in @users %>
  <div class="user">
    <p>
      <%= h user.first_name %>
      <%= h user.last_name %>
      <%link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
      <div class="clear"></div>
    </p>
  </div>
<% end %>
</div>





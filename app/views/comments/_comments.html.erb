<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= comment.name%></strong></p>
    <p class="comment_body"><strong><%= comment.body%></strong></p>
    <p class="comment_time"><%= time_ago_in_words(comment.create_at)%> ago</p>
  </div>

  <p><%= link_to 'Dellete', [comment.post, comment]
    method: :delete,
    class: "button"
  %></p>
</div>